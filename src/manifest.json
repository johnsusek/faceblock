{
  "name": "Feed Filter",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Tame your Facebook feed.",
  "homepage_url": "http://declaredintent.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": ["tabs", "https://www.facebook.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": [
        "inject/lib/highlight.min.css",
        "inject/lib/query-builder.default.css",
        "inject/filters.css",
        "inject/nocontrol.css",
        "inject/spinner.css",
        "inject/stories.css"
      ]
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": [
        "inject/lib/highlight.min.js",
        "inject/lib/jmespath.js",
        "inject/lib/jquery-1.12.4.min.js",
        "inject/lib/query-builder.standalone.js",
        "inject/filters.js",
        "inject/funcs.js",
        "inject/loading.js",
        "inject/posts.js",
        "inject/query.js",
        "inject/search.js",
        "inject/tabs.js"
      ],
      "run_at": "document_start"
    }
  ]
}
