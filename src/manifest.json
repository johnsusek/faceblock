{
  "name": "Feed Filter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description":
    "Tame your Facebook feed. Only view personal updates directly from friends, filtering out &lsquo;Pages&rsquo; content. Or view only certain types of items in your feed, like Events, Photos or plain old Status Updates.",
  "homepage_url": "http://declaredintent.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["bg/background.js"],
    "persistent": true
  },
  "options_page": "options_custom/index.html",
  "permissions": ["tabs", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["inject/style.css", "inject/components.css"]
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["inject/inject.js"],
      "run_at": "document_start"
    }
  ]
}
