{
  "name": "Feed Filter",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Tame your Facebook feed.",
  "homepage_url": "http://declaredintent.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": ["tabs", "https://www.facebook.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["inject/styles/style.css", "inject/styles/components.css"]
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["inject/scripts/injected.js"],
      "run_at": "document_start"
    }
  ]
}
